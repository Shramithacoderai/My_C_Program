#include <stdio.h>
void previewSwap(float a, float b) {
    float temp = a;
    a = b;
    b = temp;

    printf("\n--- Preview (Simulation Only) ---\n");
    printf("After preview swap:\n");
    printf("Currency A: %.2f\n", a);
    printf("Currency B: %.2f\n", b);
}
void actualSwap(float *a, float *b) {
    float temp = *a;
    *a = *b;
    *b = temp;
}

int main() {
    float currencyA, currencyB;
    int choice;

    printf("Enter value of Currency A: ");
    scanf("%f", &currencyA);

    printf("Enter value of Currency B: ");
    scanf("%f", &currencyB);

    printf("\nChoose an option:\n");
    printf("1. Preview Exchange (Call by Value)\n");
    printf("2. Confirm Exchange (Call by Reference)\n");
    printf("Enter choice: ");
    scanf("%d", &choice);

    if(choice == 1) {
        previewSwap(currencyA, currencyB);

        printf("\nOriginal values remain unchanged:\n");
        printf("Currency A: %.2f\n", currencyA);
        printf("Currency B: %.2f\n", currencyB);

    } else if(choice == 2) {
        actualSwap(&currencyA, &currencyB);

        printf("\n--- Actual Exchange Done ---\n");
        printf("Currency A: %.2f\n", currencyA);
        printf("Currency B: %.2f\n", currencyB);

    } else {
        printf("Invalid choice!");
    }

    return 0;
}
